" Use spaces instead of tabs
set expandtab       " Convert tabs to spaces
set tabstop=4       " Number of spaces a <Tab> counts for
set softtabstop=4   " Number of spaces to insert for a <Tab> in insert mode
set shiftwidth=4    " Number of spaces to use for each step of (auto)indent

" Enable smart indenting
set smartindent

" Enable line numbers
set number           " Show line numbers

" Set colors and the theme
syntax enable        " Enable syntax highlighting
set background=dark  " Set background to dark for better contrast
colorscheme mocha    " Set the color scheme to mocha

" Optional: Enable line wrapping
set wrap             " Enable line wrapping

